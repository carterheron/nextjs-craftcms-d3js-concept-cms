<!DOCTYPE html>
<html lang="{{ craft.app.language |slice(0,2) }}" class="no-js fonts-loaded">
    <head>
        <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
        <meta charset="utf-8"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover"/>
        <meta name="referrer" content="origin-when-cross-origin"/>

        <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700,900&display=swap" rel="stylesheet">

        {{ craft.twigpack.includeCssModule("app.css") }}

        {# Prevent staging environment from being indexed #}
        {% if craft.app.config.env == 'staging' %}
            <meta name="robots" content="noindex,nofollow">
        {% endif %}

        {% block headAdditions %}
        {% endblock %}
    </head>
    <body>

        {% include '_includes/_partials/header.twig' %}

        <main id="content" role="main">
            {% block content %}

            {% endblock %}
        </main>

        {% cache globally %}
            {% include '_includes/_partials/footer.twig' %}
        {% endcache %}

        {{ craft.twigpack.includeJsModule("app.js", true, {"type": "module"}) }}
        {{ craft.twigpack.includeJsModule("chunk-vendors.js", true) }}

        {% block scriptAdditions %}
        {% endblock %}
    </body>
</html>
