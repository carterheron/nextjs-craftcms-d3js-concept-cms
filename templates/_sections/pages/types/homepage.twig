{% extends '_layouts/_baseLayout.twig' %}

{% block content %}

    {% if entry.largeImageHero.all()|length %}
        {% include '_includes/_components/heroes/largeImageHero.twig' with {
            hero: entry.largeImageHero.all()
        } %}
    {% endif %}

    {% if entry.videoSection.all()|length %}
        {% include '_includes/_components/videoSection.twig' with {
            section: entry.videoSection.all(),
            bgColor: 'bg-white'
        } %}
    {% endif %}

    {% if entry.contentWTallImage.all()|length %}
        {% include '_includes/_components/contentWTallImage.twig' with {
            section: entry.contentWTallImage.all()
        } %}
    {% endif %}

    {% if entry.homepageTestimonials.all()|length %}
        {% include '_includes/_components/homepageTestimonials.twig' with {
            section: entry.homepageTestimonials.all()
        } %}
    {% endif %}

    {% if entry.onboardingProcess.all()|length %}
        {% include '_includes/_components/onboardingProcess.twig' with {
            section: entry.onboardingProcess.all()
        } %}
    {% endif %}

    {% if entry.splitContentCta.all()|length %}
        {% include '_includes/_components/splitContentCta.twig' with {
            section: entry.splitContentCta.all()
        } %}
    {% endif %}

{% endblock %}